
<link rel="stylesheet" href="/css/createProject.css">

<div class="container">
    <div class="heading-div">
        <h1> Create Issue</h1>
    </div>
    <div class="form-div">
      <!-- form to create new issue -->
        <form action="/projectDetail/create-issue/<%= project._id %>" method="post" id="new-issue">
            <div class="input-div">
              <label for="title" >Title:</label>
              <input type="text" name="title" id="title">
            </div>
            <div class="input-div">
              <label for="message" class="des-label">Description:</label>
              <textarea name="description" id="message"></textarea>
            </div>
            <div class="row mb-3 m-auto">
                <label for="labels" class="col-sm-4 col-form-label">Add Labels</label>
                <div class="col-sm-8">
                    <input class="form-check-input" name="labels" type="checkbox" value="Bug" id="bug"/>
                    <label class="form-check-label" for="bug"> Bug </label>
                    <br />

                    <input name="labels" class="form-check-input" type="checkbox" value="UI Improvement" id="ui-improvement"/>
                    <label class="form-check-label" for="ui-improvement"> UI Improvement </label> 
                    <br />

                    <input name="labels" class="form-check-input" type="checkbox" value="Documentation" id="documentation"/>
                    <label class="form-check-label" for="documentation">Documentation </label>
                    <br />

                    <input name="labels" class="form-check-input" type="checkbox" value="Enhancement" id="enhancement"/>
                    <label class="form-check-label" for="enhancement">Enhancement </label>            
                    <br />

                    <input name="labels" class="form-check-input" type="checkbox" value="Duplicate" id="duplicate"/>
                    <label class="form-check-label" for="duplicate"> Duplicate </label>
                </div>
            </div>
            <div class="input-div">
              <label for="author">Author:</label>
              <input type="text" name="author" id="author">
            </div>
            <div class="submit-div">
                <button type="submit" class="btn btn-light btn-sm">Create Issue</button>
            </div>
        </form>
    </div>
</div>