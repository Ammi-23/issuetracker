<!-- css styling link for create project form -->
<link rel="stylesheet" href="/css/createProject.css">

<div class="container">
    <div class="heading-div">
        <h1> Create Project</h1>
    </div>
    <div class="form-div">
        <!-- form to create new project with name, description and author -->
        <form action="/project" method="post" id="new-project">
            <div class="input-div">
              <label for="name" >Name:</label>
              <input type="text" name="name" id="name">
            </div>
            <div class="input-div">
              <label for="message" class="des-label">Description:</label>
              <textarea name="description" id="message"></textarea>
            </div>
            <div class="input-div">
              <label for="author">Author:</label>
              <input type="text" name="author" id="author">
            </div>
            <div class="submit-div">
                <button type="submit" class="btn btn-light btn-sm">Create Project</button>
            </div>
        </form>
    </div>
</div>